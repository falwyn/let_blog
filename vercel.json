{
  "version": 2,
  "builds": [
    {
      "src": "backend/main.go",
      "use": "@vercel/go"
    },
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/posts/(.*)",
      "dest": "/backend/main.go"
    },
    {
      "src": "/(.*)",
      "dest": "/frontend/$1"
    }
  ]
}
